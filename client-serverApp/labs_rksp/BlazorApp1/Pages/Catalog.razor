@page "/catalog"
@using BlazorApp1.Services
@inject NavigationManager _navigationManager

<h1>Nali-сеть московских ателье</h1>

<div class="container">
    <header class="d-flex flex-wrap justify-content-center py-1">
        <nav class="navbar navbar-light bg-light">
            <form class="form-inline">
                <button @onclick="@(() => toMain_page())" type="button" class="btn btn-outline-dark">Главная страница</button>
	            <button @onclick="@(() => toShowroom())" type="button" class="btn btn-outline-dark">Showroom</button>
	            <button @onclick="@(() => toService())" type="button" class="btn btn-outline-dark">Услуги</button>
            </form>
        </nav>
    </header>
</div>
<div class="right">
		<center>
			<h1>
				<font size="5" color="black" face="Lobster">Услуги</font>
			</h1>
		</center>
		<div class="grid posts">
			<div class="container">
				<div class="row">
					<div class="col-md-6">

					</div>
				</div>
				<center>
					<div class="row row-cols-1 row-cols-md-2 g-2">
						<div class="col">
							<div class="card" style="width: 15rem;">
								<img src="pictures/у2.JPG" class="card-img-top" alt="...">
								<div class="card-body">
									<center>
										<h5 class="card-title">Showrooom</h5>
										<a href="\product" class="btn btn-secondary btn-lg" color: $purple>Перейти</a>
									</center>
								</div>
							</div>
						</div>
						<div class="col">
							<div class="card" style="width: 15rem;">
								<img src="pictures/у1.JPG" class="card-img-top" alt="...">
								<div class="card-body">
									<center>
										<h5 class="card-title">Услуги</h5>
										<a href="\service" class="btn btn-secondary btn-lg" color: $purple>Перейти</a>
									</center>
								</div>
							</div>
						</div>
						
					</div>
				</center>
			</div>
		</div>
	</div>
<div class="container">
	<footer class="d-flex flex-wrap justify-content-between align-items-center py-2 my-2 border-top">
		<p class="col-md-4 mb-0 text-muted">&copy; Все права защищены 2022</p>
		<ul class="nav col-md-4 justify-content-end">
			<li class="nav-item">
				<a href="\contacts" class="nav-link px-2 text-muted">Контакты</a>
			</li>
		</ul>
	</footer>
</div>

@code {
    

	private void toCatalog()
	{
		_navigationManager.NavigateTo($"catalog");
	}
	private void toShowroom()
	{
		_navigationManager.NavigateTo($"product");
		
	}
	private void toService()
	{
		_navigationManager.NavigateTo($"service");
	}

	private void toMain_page()
	{
		_navigationManager.NavigateTo($"/");
	}
}